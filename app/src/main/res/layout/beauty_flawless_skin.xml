<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Image Section -->
        <ImageView
            android:id="@+id/imgBeauty"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:src="@drawable/beuty_image"
            android:layout_marginBottom="20dp"/>

        <!-- Horizontal Line -->
        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beauty Flawless Skin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enim lectus mauris faucibus turpis convallis ipsum odio lorem dignissim id odio sed enim nullam venenatis erat in cursus tortor tristique aliquam nulla quis."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:lineSpacingExtra="5dp"/>

        <!-- Additional Text -->
        <TextView
            android:id="@+id/tvExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aliquam scelerisque scelerisque ac laoreet laoreet faucibus vestibulum fringilla ut aliquet dictumst dignissim id eget cras nulla venenatis dictum tristique faucibus lectus egestas aenean placerat dolor dolor phasellus eros vestibulum velit turpis ornare facilisis ante ornare."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/Readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExtra"
            android:background="@drawable/pinkbtn_border"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:text="READ MORE"
            android:textAllCaps="true"
            android:textColor="@color/baby_pink"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
